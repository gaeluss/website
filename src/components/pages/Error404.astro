---
import Error404Layout from "@/layouts/Error404Layout.astro";
import { getI18N } from "@/i18n";

import { getLangFromUrl, useTranslatedPath } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const defaultLng = 'en';
const i18n = getI18N({ currentLocale: defaultLng })
const translatePath = useTranslatedPath(lang);
---

<Error404Layout title=`${i18n.ERRORS.PAGE_NOT_FOUND_TITLE}&nbsp;${new Date().getFullYear()}` description={i18n.ERRORS.PAGE_NOT_FOUND_DESCRIPTION}>
    <div class="relative min-h-screen flex items-center justify-center">
        <div class="absolute inset-0 overflow-hidden">
          <div class="absolute w-[500px] h-[500px] rounded-full bg-[#284add] opacity-70 blur-[100px] -top-48 -left-24"></div>
          <div class="absolute w-[400px] h-[400px] rounded-full bg-[#f21973] opacity-70 blur-[100px] -bottom-32 -right-16"></div>
        </div>
  
        <main class="relative z-10 text-center p-4 max-w-2xl mx-auto">
          <h1 class="text-[150px] font-bold leading-none tracking-tighter mb-6 bg-gradient-to-r from-[#284add] to-[#f21973] text-transparent bg-clip-text">
            404
          </h1>
          <p class="text-2xl mb-8 font-light">
            {i18n.ERRORS.PAGE_NOT_FOUND_MESSAGE}
          </p>
          <a 
            href={translatePath('/')}
            class="inline-block px-8 py-3 rounded-full bg-gradient-to-br from-[#284add] to-[#f21973] text-white font-medium transition-transform hover:scale-105 hover:shadow-lg hover:shadow-[#284add]/20"
          >
            {i18n.ERRORS.GO_BACK_HOME}
          </a>
        </main>
    </div>
</Error404Layout>
