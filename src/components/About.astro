<section id="about" class="relative h-screen w-full">
  <div class="sticky top-0 h-screen w-full">
    <video id="scroll-video" class="w-full h-full object-cover" src="/motion-logo.webm" muted playsinline></video>
  </div>
</section>

<section id="content-after" class="relative h-screen w-full bg-gray-100">
  <div class="container mx-auto p-4">
    <h1 class="text-xl font-bold">Contenido posterior al video</h1>
    <p>Este contenido aparecer√° una vez que el video termine.</p>
  </div>
</section>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const video = document.getElementById("scroll-video") as HTMLVideoElement;
    const aboutSection = document.getElementById("about")!;
    const contentAfter = document.getElementById("content-after")!;
    
    let videoPlaying = false;
    let videoHasPlayed = false; 
    let isScrolling = false;

    if (video instanceof HTMLVideoElement && aboutSection) {
      window.addEventListener("scroll", function () {
        if (!isScrolling) {
          window.requestAnimationFrame(updateVideo);
          isScrolling = true;
        }
      });

      function updateVideo() {
        const sectionTop = aboutSection.offsetTop;
        const sectionHeight = aboutSection.offsetHeight;
        const scrollY = window.scrollY;

        if (scrollY >= sectionTop && scrollY <= sectionTop + sectionHeight) {
          videoPlaying = true;
          contentAfter.style.display = "none";

          const scrollFraction = (scrollY - sectionTop) / sectionHeight;
          const limitedFraction = Math.max(0, Math.min(1, scrollFraction));

          video.currentTime = limitedFraction * video.duration;
        } else if (scrollY > sectionTop + sectionHeight && videoPlaying) {
          if (video.currentTime >= video.duration) {
            videoPlaying = false;
            videoHasPlayed = true;
            contentAfter.style.display = "block";
          }
        }
        isScrolling = false;
      }

      video.addEventListener("ended", function () {
        videoPlaying = false;
        videoHasPlayed = true;
        contentAfter.style.display = "block";
      });

      window.addEventListener("beforeunload", function (event) {
        if (!videoHasPlayed && video.currentTime > 0) {
          event.preventDefault();
        }
      });
    }
  });
</script>

<style>
  #about {
    height: 250vh;
  }

  #scroll-video {
    position: sticky;
    top: 0;
    width: 100%;
    height: 100vh;
    object-fit: cover;
  }

  #content-after {
    display: none;
  }
</style>
