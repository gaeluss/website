---
import { getI18N } from '@/i18n';

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<footer class="bg-black text-gray-300 py-12 mx-16">
    <div class="container mx-auto px-6">
      <div class="flex flex-col md:flex-row md:justify-between">
        <div class="mb-8 md:mb-0">
          <h3 class="text-xl font-semibold text-white mb-4">Gaeluss</h3>
          <p class="text-gray-300">{i18n.FOOTER.DESCRIPTION}</p>
          <p class="text-gray-300">info@gaeluss.com</p>
        </div>
        <div class="mb-8 md:mb-0">
          <h4 class="text-lg font-semibold text-white mb-4">{i18n.FOOTER.LINKS}</h4>
          <ul>
            <li>
              <a href="#about" class="relative group">
                {i18n.HEADER.VISION}
                <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-white transition-all duration-500 group-hover:w-full"></span>
              </a>
            </li>
            <li>
              <a href="#services" class="relative group">
                {i18n.HEADER.SERVICES}
                <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-white transition-all duration-500 group-hover:w-full"></span>
              </a>
            </li>
            <li>
              <a href="#contact" class="relative group">
                {i18n.HEADER.CONTACT}
                <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-white transition-all duration-500 group-hover:w-full"></span>
              </a>
            </li>            
          </ul>
        </div>
        <div>
          <h4 class="text-lg font-semibold text-white mb-4">{i18n.FOOTER.FOLLOW}</h4>
          <div class="flex space-x-4">
            <a href="https://www.linkedin.com/company/gaeluss" target="_blank" rel="noopener noreferrer" class="hover:text-blue-400"><img src="/assets/icons/linkedin.svg" loading="lazy" alt="Linkedin" class="size-7"></a>
            <a href="https://www.instagram.com/gaeluss_es" target="_blank" rel="noopener noreferrer" class="hover:text-blue-400"><img src="/assets/icons/instagram.svg" loading="lazy" alt="Instagram" class="size-7"></a>
            <a href="https://x.com/gaeluss_es?s=11&t=gDZVcxFrO1uma1HGotha5Q" target="_blank" rel="noopener noreferrer" class="hover:text-blue-400"><img src="/assets/icons/twitter.svg" loading="lazy" alt="Twitter" class="size-7"></a>
          </div>
          </div>
        </div>
      </div>
      <div class="mt-8 text-center text-gray-500">
        <p>&copy; 2024 Gaeluss. All rights reserved.</p>
      </div>
    </div>
  </footer>
